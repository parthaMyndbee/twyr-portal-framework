<script type="text/x-handlebars" data-template-name="components/menu-<%= menuId %>">
{{#if model.shouldDisplay}}
<ul class="nav navbar-nav" id="horizontal-menu-viewer-widget-{{model.id}}" style="text-align:left;">
	{{#each model.sortedMenuItems as |menuItem index|}}
	{{#unless menuItem.parent}}
	{{#if menuItem.shouldDisplay}}
		{{horizontal-menu-item-view-widget model=menuItem orientation="vertical" controller-action="controller-action"}}
	{{/if}}
	{{/unless}}
	{{/each}}
</ul>
{{/if}}
</script>

