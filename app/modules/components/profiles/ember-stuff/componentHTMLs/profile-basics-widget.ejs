<script type="text/x-handlebars" data-template-name="components/profile-basics-widget">
<div class="box box-primary">
	<div class="box-header with-border">
		<h3 class="box-title">Basics</h3>
		{{#if model.hasDirtyAttributes}}
		<div class="box-tools pull-right">
			<button id="button-cancel" class="btn btn-flat btn-warning btn-sm" style="border-radius:5px;" {{action "controller-action" "cancel" bubbles=false}}>
				<i class="fa fa-undo" />
				<span style="font-size:12px;">Cancel</span>
			</button>

			<button class="btn btn-flat btn-primary btn-sm" style="border-radius:5px;" {{action "controller-action" "save" bubbles=false}}>
				<i class="fa fa-save" />
				<span style="font-size:12px;">Save</span>
			</button>
		</div>
		{{/if}}
	</div>

	<div class="box-body">
		<div class="form-group">
			<label>First Name</label>
			{{input type="text" value=model.firstName class="form-control"}}
		</div>

		<div class="form-group">
			<label>Middle Names</label>
			{{input type="text" value=model.middleNames class="form-control"}}
		</div>

		<div class="form-group">
			<label>Last Name</label>
			{{input type="text" value=model.lastName class="form-control"}}
		</div>

		<div class="row" style="margin: 0px;">
			<div class="col-sm-6" style="padding-left:0px;">
				<div class="form-group">
					<label>Gender</label>
					<select id="profile-basics-widget-select-gender" class="form-control" />
				</div>
			</div>

			<div class="col-sm-6" style="padding-right:0px;">
				<div class="form-group">
					<label>Date of Birth</label>
					<div class="input-group date" id="profile-basics-widget-input-dob">
						{{input type="text" value=model.formattedDOB class="form-control" placeholder="DD MMM YYYY"}}
						<span class="input-group-addon">
							<span class="fa fa-calendar" />
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</script>